<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>博客首页</title>
    <link rel="stylesheet" href="../public/stylesheets/bootstrap-3.3.7-dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/shouye.css">
    <script src="/stylesheets/bootstrap-3.3.7-dist/js/jquery-3.2.1.min.js"></script>
    <script src="/stylesheets/bootstrap-3.3.7-dist/js/bootstrap.js"></script>
</head>
<body>
<%-include("header")%>
<%-include("nav")%>
<!-- 主体 -->
<section class="container login">
    <div class="col-md-5 col-md-offset-1">
        <form class="form-horizontal" action="/users/login" method="post">
            <span class="heading">登录</span>
            <div class="form-group">
                <input type="text" class="form-control" id="inputEmail3" placeholder="请输入用户名" name="username">
                <i class="glyphicon glyphicon-user"></i> </div>
            <div class="form-group help">
                <input type="password" class="form-control" id="inputPassword3" placeholder="请输入密码" name="password">
                <i class="glyphicon glyphicon-lock"></i> <a href="#" class="fa fa-question-circle"></a> </div>
            <div class="form-group">
                <div class="main-checkbox">
                    <input type="checkbox" value="None" id="checkbox1" name="check"/>
                    <label for="checkbox1"></label>
                </div>
                <span class="text">记住密码</span> </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">登录</button>
            </div>
        </form>
    </div>
    <div class="col-md-4 col-md-offset-1"><img src="/images/loginbg.png" class="img-responsive"></div>
</section>
<%-include("footer")%>

<script src="/javascripts/layer/layer.js"></script>
<script>
    var error="<%=locals.error%>";
    if(error){
        layer.msg(error);
    }
</script>
</body>
</html>